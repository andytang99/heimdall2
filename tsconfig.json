{
  "compilerOptions": {
    "module": "node16",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node16",
    "sourceMap": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "useUnknownInCatchVariables": false
  },
  "include": [
    "types/**/*.d.ts"
  ],
  "exclude": [
    "**/node_modules"
  ]
}
